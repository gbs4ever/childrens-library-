<style>
table,  td {
  border: 2px solid black;
  border-collapse: collapse;
}
th, td {
  padding: 5px;
}


</style>

<table style="width:100%">
  <tr>
    <th>Title</th>
    <th>Author</th> 
    <th>Review</th>
    <th>Status</th>
    <th> Link </th>
  </tr>
  <%@books.each do |book|%>
  <tr>
  
    <td><%=book.title%></td>
    <td><%=book.author%></td> 

    <td><%=book.reviews[-1].comments if !book.reviews.empty?%></td> 
    <td><%=book.reviews[-1].status if !book.reviews.empty?%></td> 
    <td><%= link_to "Click here for more info", book_path(book)%></td>
    <%end%>
  </tr>
  </table>





 
